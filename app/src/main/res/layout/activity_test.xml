<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="608dp">

        <LinearLayout
            android:id="@+id/test12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="56dp"
                android:text="@string/identify_your_symptoms"
                android:textSize="30sp"/>

            <CheckBox
                android:id="@+id/fever"
                android:layout_width="345dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Do you have a high fever?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/cough"
                android:layout_width="345dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Do you have a dry cough?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/tired"
                android:layout_width="345dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Do you feel tired?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/pain"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you feel pains and aches?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/congestion"
                android:layout_width="345dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Do you have a nasel congestion?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/headache"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you have a headache?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/conjunctivitis"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you have conjunctivitis?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/sore_throat"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you have a sore throat?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/diarrhea"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you have diarrhea?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/loss"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you have a loss of smell or taste?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/rash"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you have a rash?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <CheckBox
                android:id="@+id/change"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Has the color of the toes or hands changed?"
                android:textSize="20sp"
                tools:ignore="HardcodedText,MissingConstraints" />

            <Button
                android:id="@+id/Accept"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Accept"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/NavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/buttom_mnue"
        tools:ignore="MissingConstraints" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <RelativeLayout
        android:id="@+id/check"
        android:layout_width="369dp"
        android:layout_height="197dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/check1"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
